<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/user_profile_toolbar"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:elevation="4dp"
            android:layout_height="wrap_content"></androidx.appcompat.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="0"
                android:stretchColumns="0">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/user_profile_dp"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/wallpaper_1"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <TextView
                        android:id="@+id/user_profile_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Kondelelani Nedzingahe"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-condensed"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/blue_grey"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <TextView
                        android:id="@+id/user_profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="www.kondie@live.com"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/blue_grey"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                <TextView
                        android:id="@+id/user_profile_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="0825191140"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-condensed"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/blue_grey"/>

            </TableRow>


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/call_client_butt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/trans_circle"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/phone_icon"
                        android:layout_margin="30dp"
                        android:padding="3dp"
                        android:elevation="4dp"/>

                </LinearLayout>

            </TableRow>


        </TableLayout>

    </ScrollView>

</LinearLayout>